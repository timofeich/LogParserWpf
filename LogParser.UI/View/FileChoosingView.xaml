<UserControl x:Class="LogParser.UI.View.FileChoosingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogParser.UI.View"
             mc:Ignorable="d" d:DesignWidth="239" Height="246.5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Button Content="Вагон с УПП" Command="{Binding OpenFileDataEditViewCommand}" Style="{StaticResource NavigationButtonStyle}"/>
            <Button Content="Лог файл со стенда" Style="{StaticResource NavigationButtonStyle}"/>
            <Button Content="Вывод графиков" Style="{StaticResource NavigationButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
