<Window x:Class="LogParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogParser"
        mc:Ignorable="d"
        Background="LightGray"
        Title="LogParser" Height="450" Width="900">
    <Grid>
        <StackPanel>
            <Menu Background="White"  BorderBrush="LightGray" BorderThickness="1">
                <MenuItem Header="Файл">
                    <MenuItem Header="Открыть" Command = "{Binding OpenCommand}"/>
                    <MenuItem Header="Закрыть" Command = "{Binding CloseCommand}"/>
                    <MenuItem Header="Сохранить" Command = "{Binding SaveCommand}"/>
                </MenuItem>
                <MenuItem Header="Просмотр">
                    <MenuItem Header = "Таблица" Command="{Binding OpenTableViewCommand}"/>
                    <MenuItem Header = "События" Command="{Binding OpenEventViewCommand}"/>
                    <MenuItem Header = "Таблица + События" Command="{Binding OpenTableAndEventViewCommand }" />
                </MenuItem>
            </Menu>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.3*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Источник Лог файла"  Grid.Column="0" Background="White" TextBlock.FontSize="15" Margin="5">
                    <StackPanel Margin="5">
                        <RadioButton Content="Вагон с частотно регулируемым приводом (ПЧ)" IsChecked="{Binding LogFileType.IsCarriageWithVariableFrequencyDrive}" GroupName="LogFileType" Margin="0 10"/>
                        <RadioButton Content="Вагон с устройством плавного пуска (УПП)" IsChecked="{Binding LogFileType.IsCarriageWithSoftStartup}" GroupName="LogFileType" Margin="0 10"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Содержание Лог файла" Grid.Column="1" Background="White" TextBlock.FontSize="15" Margin="5">
                    <StackPanel Margin="5">
                        <TextBlock Text = "{Binding LogFileInformation.FileName}"/>
                        <TextBlock Text = "{Binding LogFileInformation.DatePeriod}"/>
                        <TextBlock Text = "{Binding LogFileInformation.NotesFromCarriageWithVariableFrequencyDrive}"/>
                        <TextBlock Text = "{Binding LogFileInformation.NotesFromCarriageWithSoftStartup}"/>
                        <TextBlock Text = "{Binding LogFileInformation.NumericData}"/>
                        <TextBlock Text = "{Binding LogFileInformation.EventsData}"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
