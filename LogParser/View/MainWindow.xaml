<Window x:Class="LogParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogParser"
        mc:Ignorable="d"
        Background="LightGray" WindowStartupLocation="CenterScreen"
        Title="LogParser" Height="232.459" Width="678">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Menu Background="White"  BorderBrush="LightGray" BorderThickness="1">
                <MenuItem Header="Файл">
                    <MenuItem Header="Открыть" Command = "{Binding OpenCommand}" IsEnabled="{Binding IsFileClosed}"/>
                    <MenuItem Header="Закрыть" Command = "{Binding CloseCommand}" IsEnabled="{Binding IsFileOpened}"/>
                </MenuItem>
                <MenuItem Header="Просмотр">
                    <MenuItem Header = "Данные" Command="{Binding OpenTableViewCommand}"/>
                </MenuItem>
            </Menu>

            <Grid >
                <GroupBox Header="Содержание Лог файла"  Grid.Column="1" Background="White" TextBlock.FontSize="15" Margin="5">
                    <StackPanel Margin="5">
                        <TextBlock Text = "{Binding FileName}"/>
                        <TextBlock Text = "{Binding DatePeriod}"/>
                        <TextBlock Text = "{Binding NotesFromCarriageWithSoftStartup}"/>
                        <TextBlock Text = "{Binding NumericDataCount}"/>
                        <TextBlock Text = "{Binding EventsDataCount}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <CheckBox Content="Вагон с устройством плавного пуска" IsChecked="{Binding IsLogFileFromStand}" Grid.Column="0"/>
                            <CheckBox Content="Лог файл со стенда" IsChecked="{Binding !IsLogFileFromStand}" Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

            </Grid>
            <ProgressBar Margin="5,2,5,0" Visibility="{Binding IsProgressBarVisible, Converter={StaticResource BooleanToVisibility}}" Value="{Binding TestDataGenerationPercent}" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
