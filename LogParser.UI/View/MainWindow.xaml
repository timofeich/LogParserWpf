<Window x:Class="LogParser.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogParser.UI"
        mc:Ignorable="d"
        xmlns:view="clr-namespace:LogParser.UI.View"
        Title="LogParser" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10" FontSize="40" Grid.ColumnSpan="3">
                <Bold >Log</Bold>Parser
        </TextBlock>
        <TextBlock Text="Created by Gomer Pyle, 2019" Margin="10" Grid.Row="3" Grid.ColumnSpan="3" Foreground="Gray" />
        <view:FileChoosingView Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
